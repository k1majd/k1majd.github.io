---
const { title, subtitle, desc1, desc2, desc3, desc4, desc5, desc6 } =
  Astro.props;
---

<head>
  <style>
    p {
      margin-left: 20px;
    }
  </style>
</head>
<div class="flex">
  <div class="education__time">
    <span class="w-4 h-4 bg-primary block rounded-full mt-1"></span>
    <span
      class="education__line bg-primary block h-full w-[2px] translate-x-[7px]"
    ></span>
  </div>
  <div class="experience__data bd-grid px-5">
    <h3 class="font-semibold mb-1">{title}</h3>
    <span class="text-sm">{subtitle}</span>
    <p class="my-2 font-light text-sm text-justify">{desc1}</p>
    <p class="my-2 font-light text-sm text-justify">{desc2}</p>
    <p class="my-2 font-light text-sm text-justify">{desc3}</p>
    <p class="my-2 font-light text-sm text-justify">{desc4}</p>
    <p class="my-2 font-light text-sm text-justify">{desc5}</p>
    <p class="my-2 font-light text-sm text-justify">{desc6}</p>
  </div>
</div>
